<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_rental_list" model="ir.ui.view">
        <field name="name">library.rental.list</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="borrower_id"/>
                <field name="rental_date"/>
                <field name="return_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_library_rental_form" model="ir.ui.view">
        <field name="name">library.rental.form</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="hide_confirm" invisible="1"/>
                    <button name="action_confirm_rental" string="Confirm"
                            type="object" class="btn-primary" invisible="hide_confirm == True"
                    />
                    <button name="action_return_book" string="Return Book"
                            type="object" class="btn-primary"
                            invisible="state != 'rented'"/>
                    <button name="action_mark_lost" string="Mark as Lost"
                            type="object" class="btn-danger"
                            invisible="state in ['returned', 'lost', 'draft']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="book_id" options="{'no_create': True}"/>
                            <field name="borrower_id"/>
                        </group>
                        <group>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_library_rental" model="ir.actions.act_window">
        <field name="name">Rentals</field>
        <field name="res_model">library.rental</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="is_available" widget="boolean_button"
                       options='{"terminology": "available"}'/>
            </list>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_active_rentals"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book"
                    >
                        <!--                            invisible="active_rental_count == 0">-->
                        <field string="Active Rentals" name="active_rental_count" widget="statinfo"/>
                    </button>

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="isbn"/>
                            <field name="published_date"/>
                            <field name="is_available" readonly="1"/>
                        </group>
                        <group>
                            <field name="cover_image" widget="image"
                                   options="{'preview_image': 'cover_image', 'size': [150, 200]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="author_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="summary" widget="textarea"/>
                    </group>
                    <group>
                        <field name="user_id" readonly="1"/>
                    </group>
                    <field name="rental_ids">
                        <list editable="bottom">
                            <field name="borrower_id"/>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                            <field name="state"/>
                        </list>
                    </field>
                </sheet>
                <chatter/>

            </form>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>